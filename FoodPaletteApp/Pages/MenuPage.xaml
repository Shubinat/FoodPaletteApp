<Page x:Class="FoodPaletteApp.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodPaletteApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Выбор действия">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation='Horizontal'>
                <Button Content="Рецепты блюд" x:Name="BtnDishes" Click="BtnDishes_Click"/>
                <Button Content="Личный профиль" x:Name="BtnMyProfile" Click="BtnMyProfile_Click"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <Button Content="Моя еда сегодня" x:Name="BtnProducts" Click="BtnProducts_Click"/>
                <Button Content="Статистика калорий" x:Name="BtnStat" Click="BtnStat_Click"/>
            </StackPanel>
            <Button Content="Список продуктов" x:Name="BtnProductsList" Click="BtnProductsList_Click"/>
        </StackPanel>
    </Grid>
</Page>
