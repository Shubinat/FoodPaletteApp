<Window x:Class="FoodPaletteApp.Windows.SelectDishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodPaletteApp.Windows"
        mc:Ignorable="d"
        Title="Блюдо" Height="115" Width="260" ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBlock Style="{StaticResource TBlockLabel}" Text="Блюдо:"/>
            <ComboBox x:Name="CBoxDish" DisplayMemberPath="Name" VerticalAlignment="Center"/>
        </StackPanel>
        <Button Content="Выбрать" x:Name="BtnSelect" Click="BtnSelect_Click"/>
    </StackPanel>
</Window>
